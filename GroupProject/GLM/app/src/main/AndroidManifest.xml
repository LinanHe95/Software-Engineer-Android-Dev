<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.qc.seclass.glm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GLM">
        <activity
            android:name=".ListContent"
            android:label="Items"
            android:theme="@style/Theme.GLM.NoActionBar" />
        <activity
            android:name=".SearchByString"
            android:label="Item Search"
            android:noHistory="true" />
        <activity android:name=".ListContentActivity" />
        <activity
            android:name=".ItemTypeSearch"
            android:label="Item Type Search"
            android:noHistory="true" />
        <activity
            android:name=".SearchOption"
            android:label="Search Type" />
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>